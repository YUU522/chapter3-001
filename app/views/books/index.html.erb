<h1>Books</h1>

<% @books.each do |book| %>

  <p>title</p>
  <span>
    <%= link_to book.title, book_path(book.id) %>
  </span>
  
  <p>body</p>
  <span>
    <%= link_to book.body, book_path(book.id) %>
  </span>
   <%= link_to "show", book_path(book.id) %>
   <%= link_to "edit", book_path(book.id) %>
   <%= link_to "destory", book_path(book.id) %>
<% end %>


<h3>New book</h3>
<!-- form_with部分 -->
<%= form_with model: Book.new do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
	
  <h4>body</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'create Book' %>
<% end %>